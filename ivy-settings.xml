<ivysettings>
  <settings defaultResolver="main-chain"/>

  <property name="lib.dir" value="${basedir}/lib" override="false"/>
  <property name="ivy.local.default.root" value="${basedir}/.ivy2/local" override="false"/>
  <property name="ivy.shared.default.root" value="${basedir}/.ivy2/shared" override="false"/>
  <property name="egov.plugins.dir" value="${basedir}/../../eclipse/plugins" override="false"/>

  <resolvers>
    <chain name="main-chain" returnFirst="true">
      <filesystem name="project-libs" m2compatible="true">
        <ivy pattern="${lib.dir}/[organisation]/[module]/ivy-[revision].xml"/>
        <artifact pattern="${lib.dir}/[organisation]/[module]/[artifact]-[revision].[ext]"/>
      </filesystem>
      <filesystem name="local" m2compatible="true" local="true">
        <ivy pattern="${ivy.local.default.root}/[organisation]/[module]/ivy-[revision].xml"/>
        <artifact pattern="${ivy.local.default.root}/[organisation]/[module]/[artifact]-[revision].[ext]"/>
      </filesystem>
      <filesystem name="egovframe-local" m2compatible="false">
        <artifact pattern="${egov.plugins.dir}/[artifact]_[revision]*.[ext]"/>
        <artifact pattern="${egov.plugins.dir}/[artifact]-[revision]*.[ext]"/>
      </filesystem>
      <ibiblio name="egovframe" m2compatible="true" root="https://maven.egovframe.go.kr/maven/"/>
      <ibiblio name="maven-central" m2compatible="true" root="https://repo1.maven.org/maven2"/>
    </chain>
  </resolvers>

  <modules>
    <module organisation="sgw" resolver="local"/>
  </modules>
</ivysettings>
